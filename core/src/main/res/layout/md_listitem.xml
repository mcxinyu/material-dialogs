<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?selectableItemBackground"
  android:focusable="true"
  android:gravity="center_vertical|start"
    android:minHeight="@dimen/rename_md_listitem_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/md_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/rename_md_dialog_frame_margin"
        android:layout_marginLeft="@dimen/rename_md_listitem_margin_left"
        android:layout_marginRight="@dimen/rename_md_dialog_frame_margin"
        android:layout_marginStart="@dimen/rename_md_listitem_margin_left"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/rename_md_listitem_vertical_margin"
        android:paddingTop="@dimen/rename_md_listitem_vertical_margin"
        android:textSize="@dimen/rename_md_listitem_textsize"
        tools:text="Item" />

</LinearLayout>