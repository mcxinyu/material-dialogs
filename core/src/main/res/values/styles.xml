<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="rename_MD_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="rename_md_divider">@color/rename_md_divider_black</item>
        <item name="rename_md_list_selector">@drawable/md_selector</item>
        <item name="rename_md_btn_stacked_selector">@drawable/md_selector</item>
        <item name="rename_md_btn_positive_selector">@drawable/md_btn_selector</item>
        <item name="rename_md_btn_neutral_selector">@drawable/md_btn_selector</item>
        <item name="rename_md_btn_negative_selector">@drawable/md_btn_selector</item>

        <item name="android:windowAnimationStyle">@style/rename_MD_WindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="rename_MD_Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="rename_md_divider">@color/rename_md_divider_white</item>
        <item name="rename_md_list_selector">@drawable/md_selector_dark</item>
        <item name="rename_md_btn_stacked_selector">@drawable/md_selector_dark</item>
        <item name="rename_md_btn_positive_selector">@drawable/md_btn_selector_dark</item>
        <item name="rename_md_btn_neutral_selector">@drawable/md_btn_selector_dark</item>
        <item name="rename_md_btn_negative_selector">@drawable/md_btn_selector_dark</item>

        <item name="android:windowAnimationStyle">@style/rename_MD_WindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="rename_MD_ActionButtonStacked" parent="@style/rename_MD_ActionButton" tools:ignore="NewApi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">
            @dimen/rename_md_button_padding_horizontal_internalexternal
        </item>
        <item name="android:paddingStart">
            @dimen/rename_md_button_padding_horizontal_internalexternal
        </item>
        <item name="android:paddingRight">
            @dimen/rename_md_button_padding_horizontal_internalexternal
        </item>
        <item name="android:paddingEnd">
            @dimen/rename_md_button_padding_horizontal_internalexternal
        </item>
    </style>

    <style name="rename_MD_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/rename_md_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="rename_MD_ActionButton.Text" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/rename_md_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/rename_md_button_min_width</item>
        <item name="android:paddingLeft">@dimen/rename_md_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/rename_md_button_textpadding_horizontal</item>
    </style>

    <style name="rename_MD_WindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

</resources>